{% extends "layout/_layout.twig" %}

{% block title %}Авторизация{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        .card {
            -webkit-box-shadow: 0 0 30px 0 rgba(0, 0, 0, 0.3);
            box-shadow: 0 0 30px 0 rgba(0, 0, 0, 0.3);
        }
    </style>
{% endblock %}

{% block content %}

    <div class="row align-items-center" style="height: 80vh">
        <div class="form col-md-3" style="margin: 0 auto;">
            <div class="card">
                <div class="card-header">Авторизация</div>
                <div class="card-body">
                    <form>
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" id="login" placeholder="Логин" type="text"
                                       autofocus=""/>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="password" placeholder="Пароль"
                                       type="password" value=""/>
                            </div>
                            <button type="button" class="btn btn-primary btnLogin">Авторизоваться</button>
                            <div class="error"></div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="/js/auth.js"></script>
{% endblock %}